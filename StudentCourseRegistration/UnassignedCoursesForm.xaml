<Window x:Class="StudentCourseRegistration.UnassignedCoursesForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentCourseRegistration"
        mc:Ignorable="d"
        Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" Loaded="Window_Loaded">
    <Grid MouseDown="Grid_MouseDown">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,2" EndPoint="1,0.3">
                <GradientStop Color="#0f2027" Offset="1.0" />
                <GradientStop Color="#203a43" Offset="0.1" />
                <GradientStop Color="#2c5364" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel Margin="10">
            <Label Content="Un-Assigned Courses" Foreground="White" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Arial" FontWeight="Bold"/>
            <Button Click="backbtn_Click" x:Name="backbtn" Content="Back To Mainpage" Width="120" Height="40"/>
            <DataGrid x:Name="datagrid" Margin="10" Height="340" Background="Transparent" BorderBrush="White"/>
        </StackPanel>
    </Grid>
</Window>
